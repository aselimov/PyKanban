Screen {
    layout: horizontal;
    overflow-x: auto;
}

EditScreen {
    align: center middle;
    overflow-x: hidden;
    layout: vertical;
    background: #282828 50%;
}

.column {
    width: 1fr;
    height: 100%;
    padding: 2 2 2 2;
    border-right: dashed #458588; 
}

.last-column{
    width: 1fr;
    height: 100%;
    padding: 2 2 2 2;

}

.header {
    content-align: center top; 
    color: #458588;
    text-style: bold underline;
}
